@model IEnumerable<Academia.Models.db.Docente>

@{
    ViewBag.Title = "Docentes";
}

<h2><br />Docentes</h2>

<p><br />
    @Html.ActionLink("  ", "Create", null, new { @class = "btn btn-primary fa fa-user-plus", @style = "font-size:x-large" })
</p>
<table class="table">

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.eshombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.especialidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fechanacimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dedicacion.descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoSangre.nombre)
            </th>
            <th></th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.eshombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.especialidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fechanacimiento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dedicacion.descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoSangre.nombre)
                </td>
                <td>@Html.ActionLink(" ", "Edit", new { id = item.id }, new { @class = "btn btn-light far fa-edit" })@Html.ActionLink(" ", "Details", new { id = item.id }, new { @class = "btn btn-light far fa-eye" })
                    @Html.ActionLink(" ", "Delete", new { id = item.id }, new { @class = "btn btn-light far fa-trash-alt" })
                </td>
            </tr>
        }

    </tbody>
</table>
@section scripts{
    <script>
        $(document).ready(function () {
            $('.table').DataTable();
        });
    </script>
}