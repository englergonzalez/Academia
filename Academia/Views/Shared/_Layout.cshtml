    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    <footer>
        <div class="footer-top">
            <div class="container">
                <div class="logo mr-auto">
                    <h1 class="text-light">
                        <a class="navbar-brand" href="#">
                            <img src="" alt="" class="img-fluid">
                            <span style="font-size:15pt">&#9820;</span>Academia
                        </a>
                    </h1>
                </div>
                <div class="row">

                    <div class="col-lg-4 col-md-6 footer-newsletter">

                        <h4>Boletín</h4>
                        <p>Mantente informado de todo lo que sucede.</p>
                        <form action=""  role="form" class="php-email-form">
                            <input type="email" name="email" placeholder="Correo eletrocnico" data-rule="email" data-msg="Por favor, introduzca un correo electrónico válido">
                            <input type="submit" value="Subscribirse">
                            <div class="validate"></div>
                        </form>
                    </div>

                </div>
            </div>
        </div>

        <div class="container">
            <div class="copyright">
                <p>&copy; Copyright @DateTime.Now.Year <strong><span> Academia LLC</span></strong>. Todos los derechos reservados.</p>
            </div>
        </div>

    </footer>

    @Scripts.Render("~/bundles/jquery")
